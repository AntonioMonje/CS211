  int s = 0;
  int ans;
  string c;
int cpu = rand() % 3 + 1;
 if(cpu == 1)
   c = "rock"; 
if(cpu == 2)
  c = "Paper";
 if(cpu == 3)
   c = "Scissors";

      display();
      cout << endl;
      cout << "Enter Your choice: " << endl;
      ans = getNumberInRange(1, 4, "Invalid choice enter a 1, 2, or 3 please: ");
  
      if(ans == 1)
	{
	  cout << "You picked Rock! " << endl;
	  cout << "I picked " << c << endl;
	}
      else if(ans == 2)
	{
	  cout << "You picked Paper! " << endl;
	  cout << "I picked " << c << endl;
	}
      else if(ans == 3)
	{ 
