#include <iostream>
using namespace std;
int main()
{
  int* p1;
  int* p2;
  p1 = new int;
  p2 = new int;
  *p1 = 1;
  cout << "p1 is " << *p1 << endl;
  *p2 = 2;
  cout << "p2 is " << *p2 << endl;
  delete p2;
  p2 = p1;
  cout << "p2 is " << *p2 << endl;
  delete p1;
  p1 = NULL;
  p2 = new int;
  *p2 = 3;
  cout << "p2 is " << *p2 << endl;

  return 0;
}
